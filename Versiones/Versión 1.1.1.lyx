\begin_inset Formula 
\[
\sum_{j=1}^{n}\left(\phi_{j}^{\left(2\right)}q_{j}^{\left(1\right)}-\phi_{j}^{\left(1\right)}q_{j}^{\left(2\right)}\right)=0
\]

\end_inset


\end_layout

